menuconfig ZMK_BEHAVIOR_MEJIRO
    bool "Mejiro chorded IME behavior"
    default y
    help
      Enables the Mejiro (メジロ式) chord-to-romaji behavior.

if ZMK_BEHAVIOR_MEJIRO

config ZMK_BEHAVIOR_MEJIRO_LOG_LEVEL
    int "Log level for Mejiro behavior"
    default 3

config ZMK_BEHAVIOR_MEJIRO_HOST_JIS
    bool "Assume host OS layout is JIS"
    default y
    help
      If enabled, symbol output in command strings uses JIS-aware mapping.

endif # ZMK_BEHAVIOR_MEJIRO
